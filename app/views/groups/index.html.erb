<div class="page-header">
  <ol class="breadcrumb">
    <li><a href="<%= root_path %>">Telephone Appointment planner</a></li>
    <li class="active">Groups</li>
  </ol>

  <h1>Groups</h1>
</div>

<div class="row">
  <div class="col-md-12">
    <% if @groups.empty? %>
      <p class="no-content t-notice">No groups.</p>
    <% else %>
      <table class="table table-bordered">
        <thead>
          <tr class="table-header">
            <th>Name</th>
          </tr>
        </thead>
        <tbody>
          <% @groups.each do |group| %>
            <tr class="t-group">
              <td><%= group.name %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% end %>
  </div>
</div>
