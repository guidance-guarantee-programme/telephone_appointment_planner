<% if @appointment.accessibility_requirements? %>
  <h1 style="color: #0F19A0 !important;font-family: Calibri, Arial, sans-serif;margin: 15px 0;font-weight: 700;font-size: 20px;line-height: 1.111111111;padding: 15px 0;">
    The customer has indicated they require help or an accessibility adjustment to access their appointment
  </h1>
<% end %>

<% if @appointment.third_party_booking? %>
  <h1 style="color: #0F19A0 !important;font-family: Calibri, Arial, sans-serif;margin: 15px 0;font-weight: 700;font-size: 20px;line-height: 1.111111111;padding: 15px 0;">
    The customer has indicated they are attending an appointment on behalf of an individual
  </h1>
<% end %>

<% if !@appointment.dc_pot_confirmed? %>
  <h1 style="color: #0F19A0 !important;font-family: Calibri, Arial, sans-serif;margin: 15px 0;font-weight: 700;font-size: 20px;line-height: 1.111111111;padding: 15px 0;">
    The customer has indicated that they are unsure if they have a DC pension
  </h1>
<% end %>

<%= p do %>
  Reference number:
  <br>
  <strong class="emphasize">
    <%= @appointment.id %>
  </strong>
<% end %>

<%= p do %>
  <%= link_to 'View the appointment', edit_appointment_url(@appointment) %>
<% end %>
