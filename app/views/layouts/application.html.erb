<% content_for :head do %>
  <%= csrf_meta_tag %>
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
<% end %>

<% content_for :navbar_items do %>
  <% if current_user.resource_manager? %>
    <%= active_link_to 'Manage guiders', users_path, wrap_tag: :li %>
  <% end %>
  <% if current_user.contact_centre_agent? %>
    <%= active_link_to 'Create appointments', new_appointment_path, wrap_tag: :li %>
  <% end %>
<% end %>

<% content_for :body_end do %>
  <script>
  var loadedModules = [];
  var readyEvent = Turbolinks.supported ? 'turbolinks:load' : 'ready';

  $(document).on(readyEvent, function() {
    var modules = $('[data-module]');

    if (loadedModules.length) {
      return;
    }

    modules.each(function() {
      var $el = $(this),
      type = $el.data('module'),
      config = $el.data('config');

      loadedModules.push(new PWTAP[type]($el, config));
    });
  });
  </script>
<% end %>

<%= render template: 'layouts/govuk_admin_template' %>
