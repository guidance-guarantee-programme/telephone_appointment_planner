<% content_for :head do %>
  <%= csrf_meta_tag %>
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
<% end %>

<% content_for :navbar_items do %>
  <% if current_user.resource_manager? %>
    <%= active_link_to 'Manage guiders', users_path, wrap_tag: :li %>
    <%= active_link_to 'Manage groups', groups_path, wrap_tag: :li %>
  <% end %>
<% end %>

<% content_for :body_end do %>
  <script>
  var loadedModules = [];
  $(document).on('turbolinks:load', function() {
    var modules = $('[data-module]');

    if (loadedModules.length) {
      return;
    }

    modules.each(function() {
      var $el = $(this),
      type = $el.data('module'),
      config = $el.data('config');

      loadedModules.push(new PWTAP[type]($el, config));
    });
  });
  </script>
<% end %>

<%= render template: 'layouts/govuk_admin_template' %>
