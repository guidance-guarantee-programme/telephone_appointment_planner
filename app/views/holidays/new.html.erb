<%= breadcrumb(
  { title: 'Holidays', path: holidays_path },
  { title: 'Create a holiday' }
)
%>

<h1>Create a holiday</h1>

<%= form_for @holiday, layout: :basic do |f| %>
  <%= f.text_field :title, class: 't-title' %>
  <%=
    f.text_field(
      :date_range,
      class: 't-date-range',
      data: {
        module: 'date-range-picker',
        config: {
          timePicker: true,
          timePickerIncrement: 5,
          locale: {
            format: 'DD/MM/YYYY HH:mm'
          }
        }
      }
    )
  %>
  <%=
    f.select(
      :users,
      grouped_options_for_select(guider_options),
      {},
      multiple: 'multiple',
      class: 't-users',
      data: { module: 'advanced-select' },
    )
  %>
  <%= f.submit 'Save', class: 't-save' %>
<% end %>
