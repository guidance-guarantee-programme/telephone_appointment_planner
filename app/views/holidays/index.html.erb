<%= breadcrumb( { title: 'Holidays' } ) %>

<h1>Holidays</h1>

<div class="row">
  <div class="col-xs-12">
    <%= link_to new_holiday_path, class: 'btn btn-primary' do %>
    <span class="fa fa-calendar-times-o t-create-holiday" aria-hidden="true"></span> Add Holiday
  <% end %>
  </div>
</div>

<%= render 'shared/nojs' %>

<div
  id="HolidaysCalendar"
  class="holiday-calendar t-calendar"
  data-module="holidays-calendar"
  data-new-holiday-path="<%= new_holiday_path %>"
  data-default-date="<%= Time.zone.now %>"
 ></div>
