<div class="page-header">
  <ol class="breadcrumb">
    <li><a href="<%= root_path %>">Home</a></li>
    <li><a href="<%= users_path %>">Manage Guiders</a></li>
    <li class="active">Edit User &quot;<%=@guider.name %>&quot;</li>
  </ol>

  <h1>Edit User "<%=@guider.name %>"</h1>
</div>

<%= link_to new_user_schedule_path(@guider), class: 'btn btn-primary' do %>
  <span class="glyphicon glyphicon-calendar"></span> Add schedule
<% end %>

<table class="table table-striped table-bordered table-hover">
  <caption><span class="sr-only">List of guiders</span></caption>
  <colgroup>
    <col width="98%">
    <col width="1%">
  </colgroup>
  <thead>
    <tr>
      <th>Schedule</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
  <% @schedules.each do |schedule| %>
    <tr>
      <td><%= "#{schedule.title}" %></td>
      <td><%= link_to edit_user_schedule_path(@guider, schedule), title: "Edit Schedule #{schedule.title}", :class => 'btn btn-info' do %><span class="glyphicon glyphicon-pencil"></span><span class="sr-only">Edit Schedule</span><% end %></td>
    </tr>
  <% end %>
  <% if @schedules.empty? %>
    <tr>
      <td colspan="2">No slots</td>
    </tr>
  <% end %>
  </tbody>
</table>
