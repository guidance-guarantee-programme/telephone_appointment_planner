<div class="page-header">
  <ol class="breadcrumb">
    <li><a href="<%= root_path %>">Telephone Appointment planner</a></li>
    <li class="active">Tags</li>
  </ol>

  <h1>Tags</h1>
</div>

<div class="row">
  <div class="col-md-12">
    <% if @tags.empty? %>
      <p class="no-content t-notice">No tags.</p>
    <% else %>
      <table class="table table-bordered">
        <thead>
          <tr class="table-header">
            <th>Name</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @tags.each do |tag| %>
            <tr class="t-tag">
              <td><%= tag.name %></td>
              <td><%= link_to 'Delete',
                    tag, method: :delete,
                    class: 'btn btn-danger t-delete',
                    data: { confirm: "Are you sure you want to delete the tag #{tag.name}?" }
                  %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% end %>
  </div>
</div>
